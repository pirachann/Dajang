<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.quiz.LevelQuizActivity">


    <ImageView
        android:id="@+id/quizmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="452dp"
        android:foregroundGravity="center"
        android:src="@drawable/quizmenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_trueorfalse"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/trueorfalse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/quizmenu"
        app:layout_constraintTop_toBottomOf="@id/quizmenu" />

    <ImageButton
        android:id="@+id/btn_clozetest"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/clozetest"
        app:layout_constraintEnd_toEndOf="@+id/btn_trueorfalse"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_trueorfalse"
        app:layout_constraintTop_toBottomOf="@id/btn_trueorfalse" />


</androidx.constraintlayout.widget.ConstraintLayout>